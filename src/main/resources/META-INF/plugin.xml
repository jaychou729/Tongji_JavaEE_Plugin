<idea-plugin>
    <id>com.example.lmz</id>
    <name>Test</name>
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>


    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>


    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.example.test.trackcode.ktl.OnProjectOpen"/>
        <applicationService serviceImplementation="com.example.test.trackcode.storage.PersistentStorage"/>
    </extensions>


    <actions>
        <action id="MyFirstAction.id" class="com.example.test.MyFirstAction" text="第一个操作" description="嗷嗷嗷">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl F11" second-keystroke="ctrl F12"/>
        </action>
        <action id="com.lycmoons.trackcode.rebond.id" class="com.example.test.trackcode.action.ReBondRepo"
                text="仓库重绑" description="重新绑定远程仓库">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta 0"/>
        </action>
        <action id="lycmoons.testaction.id" class="com.example.test.trackcode.action.TestAction" text="测试"
                description="用于测试显示窗口">
            <keyboard-shortcut keymap="$default" first-keystroke="meta 9"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl 9"/>
        </action>
    </actions>
</idea-plugin>